<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>Area</th>
      <th>Recrutador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.area %></td>
        <td><%= group.recruiter_id %></td>
        <td><%= link_to 'Mostrar', group %></td>
        <td><%= link_to 'Editar', edit_group_path(group) %></td>
        <td><%= link_to 'Apagar', group, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Grupo', new_group_path %>

<br>

<h1>Tabela de Recrutadores</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Recrutador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.recruiter_id %></td>
        <td><%= group.area %></td>
      </tr>
    <% end %>
  </tbody>
</table>
