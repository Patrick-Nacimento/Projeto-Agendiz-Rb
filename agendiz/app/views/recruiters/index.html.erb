<p id="notice"><%= notice %></p>

<h1>Recrutadores</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Cnpj</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recruiters.each do |recruiter| %>
      <tr>
        <td><%= recruiter.id %></td>
        <td><%= recruiter.description %></td>
        <td><%= recruiter.cnpj %></td>
        <td><%= recruiter.telephone %></td>
        <td><%= link_to 'Mostrar', recruiter %></td>
        <td><%= link_to 'Editar', edit_recruiter_path(recruiter) %></td>
        <td><%= link_to 'Apagar', recruiter, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

